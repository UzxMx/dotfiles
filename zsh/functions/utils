# vi: ft=sh

# Update Zsh plugins
uz() {
  antibody bundle <~/.dotfiles/zsh/plugins.txt >~/.zsh_plugins.sh
  antibody update
}

# Make directory and change into it
mc() {
  mkdir -p "$1" && cd "$1"
}

ci() {
  compinit -C
}

todo() {
  vi ~/.dotfiles/doc/todo.md
}

enable_pry_rails() {
  unset DISABLE_PRY_RAILS
}

disable_pry_rails() {
  export DISABLE_PRY_RAILS=1
}
