# vim: ft=zsh

# No arguments: `git status .`
# With arguments: acts like `git`
g() {
  if [ $# -gt 0 ]; then
    git "$@"
  else
    git status .
  fi
}

gi() {
  curl -s "https://www.gitignore.io/api/$*"
}

# ftag - checkout git tag
ftag() {
  local tags tag
  tags=$(git tag) &&
  tag=$(echo "$tags" | fzf +m)
  if [ -n "$tag" ]; then
    git checkout -b $tag $tag
  fi
}
