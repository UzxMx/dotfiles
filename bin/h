#!/usr/bin/env bash

set -eo pipefail

dotfiles_dir="$(realpath "$(dirname "$BASH_SOURCE")/..")"

usage() {
  cat <<-EOF
Search filenames and file contents from docs and dotfiles directories.
EOF
  exit 1
}

case "$1" in
  "")
    s --filename ~/.docs/src "$dotfiles_dir"
    ;;
  *)
    usage
    ;;
esac
