#!/usr/bin/env bash
#
# Edit /etc/hosts as sudo. For WSL, we edit hosts file at C drive.

set -e

case "$1" in
  '-h' | '--help')
    sed -ne '/^#/!q;s/.\{1,2\}//;1,2d;p' <"$0"
    exit 0
    ;;
esac

source ~/.dotfiles/scripts/lib/utils.sh

if is_wsl; then
  wslsudo vi /mnt/c/Windows/System32/drivers/etc/hosts
  # TODO sync with /etc/hosts
else
  sudo vi /etc/hosts
fi
